<?xml version="1.0" encoding="UTF-8"?>

<templates id="sh_html_snippet_templates" xml:space="preserve">


    <t t-name="sh_corpomate_theme.sh_popup_html_snippet">
         <div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" id="js_id_model_html_snippet_config" style="z-index: 99999;">
            <div class="modal-dialog" style="max-width: 750px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">HTML Snippet</h5>
                    </div>
                    <div class="modal-body" style="padding-top: 0px; padding-bottom: 0px;">
                        <div class="container">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-controls='#sh_id_html_block' data-bs-toggle="tab" href="#sh_id_html_block" role="tab">HTML</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="tab" href="#sh_id_css_block" role="tab">CSS</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-bs-toggle="tab" href="#sh_id_js_block" role="tab">JS</a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div id="sh_id_html_block" class="container tab-pane active">
                                    <br />

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">HTML Code</label>
                                        <div class="col-sm-12">
                                            <div class="input-group">
                                                <textarea rows="10" cols="100" name="sh_html_snippet_html_code" class="form-control" id="js_id_sh_html_snippet_html_code" placeholder="Your HTML Code" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="sh_id_css_block" class="container tab-pane fade">
                                    <br />

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">CSS Code</label>
                                        <div class="col-sm-12">
                                            <div class="input-group">
                                                <textarea rows="10" cols="100" name="sh_html_snippet_css_code" class="form-control" id="js_id_sh_html_snippet_css_code" placeholder="Your CSS Code" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="sh_id_js_block" class="container tab-pane fade">
                                    <br />

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">JS Code</label>
                                        <div class="col-sm-12">
                                            <div class="input-group">
                                                <textarea rows="10" cols="100" name="sh_html_snippet_js_code" class="form-control" id="js_id_sh_html_snippet_js_code" placeholder="Your JS Code" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary js_cls_btn_apply_html_snippet_config" style='margin-right: 8px;'>Save changes</button>
                        <button type="button" class="btn btn-secondary js_cls_btn_close_html_snippet_config" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
