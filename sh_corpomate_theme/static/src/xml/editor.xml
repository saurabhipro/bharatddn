    <!-- Border Radius Dialog -->
    <t t-name="sh_corpomate_theme.dialog.border_radius">
        <form class="sh_border_radius_opt_form" data-value="custom">
            <fieldset>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label" for="sh_border_radius_opt_lbl">Border Radius</label>
                    <div class="col-md-5">
                        <div class="input-group">
                            <input type="number" min="0" class="form-control" id="js_id_sh_border_radius_opt_input" placeholder="auto" />
                            <div class="input-group-append">
                                <div class="input-group-text">px</div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </t>
