<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template inherit_id="website.layout" id="sh_popup" name="Main layout">
        <xpath expr="//div[@id='wrapwrap']" position="before">
            <t t-if="website.swp_is_popup_msg == True">
                <t t-if="website.swp_popup_style == 'style_1'" t-call="sh_corpomate_theme.sh_website_popup_modal_tmpl_1" />
                <t t-if="website.swp_popup_style == 'style_2'" t-call="sh_corpomate_theme.sh_website_popup_modal_tmpl_2" />
                <t t-if="website.swp_popup_style == 'style_3'" t-call="sh_corpomate_theme.sh_website_popup_modal_tmpl_3" />
                <t t-if="website.swp_popup_style == 'style_4'" t-call="sh_corpomate_theme.sh_website_popup_modal_tmpl_4" />
                <t t-if="website.swp_popup_style == 'style_5'" t-call="sh_corpomate_theme.sh_website_popup_modal_tmpl_5" />
            </t>
        </xpath>
    </template>
</odoo>