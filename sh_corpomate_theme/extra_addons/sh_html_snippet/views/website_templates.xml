<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Snippet Options -->
    <template id="sh_html_snippet_snippet_options" name="HTML Snippet Options" inherit_id="website.snippet_options">
        <xpath expr="//div" position="after">
            <div data-js="js_editor_sh_html_snippet" data-selector=".sh_html_snippet_section_1">
                <we-button data-no-preview="true">Change HTML Snippet</we-button>
            </div>
        </xpath>
    </template>

    <template id="sh_html_snippet_snippets" name="HTML Snippet" inherit_id="website.snippets">
        <xpath expr="//snippets[@id='snippet_structure']" position="after">
            <snippets id="sh_html_snippets" string="HTML Snippet">
                <t t-snippet="sh_corpomate_theme.sh_html_snippet_tmpl_1" t-thumbnail="/sh_corpomate_theme/static/src/images/extra_addons/sh_html_snippet/thumbnail.png" />
            </snippets>
        </xpath>
    </template>
</odoo>