<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--==== THEME 2 TESTIMONIAL start=======-->
    <template id="sh_corpomate_theme_item_371" name="theme 2 testimonial">
      <div class="item">
        <div class="sh_content">
          <div class="sh_img">
            <t t-if='testimonial and testimonial.sh_image'>
              <img t-att-src="image_data_uri(testimonial.sh_image)" />
            </t>
            <t t-else=''>
              <img src="/sh_corpomate_theme/static/src/images/placeholder.png" />
            </t>
          </div>
          <div class="sh_text">
            <h4>
              <t t-esc="testimonial.partner.name" />
            </h4>
            <p>
              <t t-esc="testimonial.comment" />
            </p>
          </div>
        </div>
      </div>
    </template>
<!--==== THEME 2 TESTIMONIAL end =======-->


  <!--==== THEME 6 TESTIMONIAL =======-->
  <template id="sh_corpomate_theme_item_444" name="Sh Snippet item 444">
    <div class="item">
      <div class="sh_testimonial_box">
        <div class="thumb">
          <t t-if='testimonial and testimonial.sh_image'>
            <img t-att-src="image_data_uri(testimonial.sh_image)" />
          </t>
          <t t-else="">
            <img src="/sh_corpomate_theme/static/src/images/placeholder.png" />
          </t>
          <span class="fa fa-quote-right"></span>
        </div>
        <div class="info">
          <p>
            <t t-esc="testimonial.comment" />
          </p>
          <div class="bottom">
            <div class="provider">
              <h5>
                <t t-esc="testimonial.partner.name" />
              </h5>
              <span>
                <t t-esc="testimonial.function" />
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </template>
  <!--==== THEME 6 TESTIMONIAL =======-->

  <!--==== THEME 6 TESTIMONIAL =======-->
  <template id="sh_corpomate_theme_item_452" name="Sh Snippet item 452">
    <div class="item">
      <div class="sh_testimonial_box">
        <div class="testimonial_box">
          <div class="thumb">
            <t t-if='testimonial and testimonial.sh_image'>
              <img t-att-src="image_data_uri(testimonial.sh_image)">
                <div class="img-sub-div"></div>
              </img>
            </t>
            <t t-else=''>
              <img src="/sh_corpomate_theme/static/src/images/placeholder.png" />
            </t>
          </div>
          <div class="info">
            <p>
              <t t-esc="testimonial.comment" />
            </p>
            <div class="bottom">
              <div class="provider">
                <h5>
                  <t t-esc="testimonial.partner.name" />
                </h5>
                <span>
                  <t t-esc="testimonial.function" />
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </template>
  <!--==== THEME 6 TESTIMONIAL =======-->
</odoo>