<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="id_indore_microsite_template" name="UDAN Property Info">
  <t t-call="website.layout">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
   <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <div class="property_details_template">
        <header class="header-area">
          <div class="header-text">
            <h1>Welcome to <span class="highlight-hindi">डिजिटल पता</span></h1>
            <div class="subtitle">INDORE MUNICIPAL CORPORATION</div>
          </div>
          <div class="header-logo-wrapper">
            <img src="https://i.ibb.co/BwJ49yJ/indore-logo.png" alt="Indore Municipal Corporation Logo" />
          </div>
        </header>
          <!-- section-1 -->
<!-- section-1 -->
<section class="p-3">
  <div class="bg-danger-subtle rounded p-3">

 
    <!-- Property Card -->
    <div class="bg-white rounded p-4 shadow-sm">

      <div class="mb-3">
        <div class="text-secondary small fw-semibold">Owner Name</div>
        <div class="fw-bold text-uppercase">Lucas Nelson</div>
      </div>

      <div class="mb-3">
        <div class="text-secondary small fw-semibold">Property Identification Number</div>
        <div class="fw-bold">0080</div>
      </div>

      <div class="mb-3">
        <div class="text-secondary small fw-semibold">Digital Door Number</div>
        <div class="fw-bold">F7-06/D-0080</div>
      </div>

      <div class="mb-3">
        <div class="text-secondary small fw-semibold">Latitude &amp; Longitude</div>
        <div class="fw-bold">NULL &amp; NULL</div>
      </div>

      <div class="mb-3">
        <div class="text-secondary small fw-semibold">Block</div>
        <div class="fw-bold">06/D</div>
      </div>

      <div class="mb-3">
        <div class="text-secondary small fw-semibold">Address</div>
        <div class="fw-bold text-uppercase">Zone Seven Block Six</div>
      </div>

      <!-- Property Buttons -->
      <div class="d-flex justify-content-between gap-2 mt-4">
        <div class="bg-light rounded shadow-sm px-3 py-2 w-50 text-center fw-medium">Property 1</div>
        <div class="bg-light rounded shadow-sm px-3 py-2 w-50 text-center fw-medium">Property 2</div>
      </div>
    </div>
  </div>
</section>





              <!-- Government Payment Services -->
                <section class="services-section">
                  <h2 class="fw-bold fs-5 text-center text-dark">Government Payment Services</h2>
                  <div class="row g-3 text-center p-4">

                    <div class="col-12 col-sm-6 col-md-4">
                      <div class="p-3 border border-light rounded bg-white text-dark h-100">
                        <i class="bi bi-house-fill fs-2 d-block mb-3"></i>
                        <span class="fs-5 fw-semibold">Property Tax</span>
                      </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4">
                      <div class="p-3 border border-light rounded bg-white text-dark h-100">
                        <i class="bi bi-droplet-fill fs-2 d-block mb-3"></i>
                        <span class="fs-5 fw-semibold">Water Tax</span>
                      </div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4">
                      <div class="p-3 border border-light rounded bg-white text-dark h-100">
                        <i class="bi bi-plug-fill fs-2 d-block mb-3"></i>
                        <span class="fs-5 fw-semibold">Electricity Bill</span>
                      </div>
                    </div>

                  </div>
                </section>



<!-- Emergency Services -->
<section class="p-4">
  <div class="bg-white rounded p-4 text-center shadow-sm">
    <h2 class="fw-bold fs-5 mb-4">Emergency Services</h2>
    <div class="row g-3">

      <!-- Emergency Boxes -->
      <div class="col-12 col-sm-6">
        <div class="p-3 rounded text-danger fw-semibold d-flex flex-column align-items-center" style="background: #f8d7da;">
          <i class="bi bi-exclamation-triangle-fill fs-2 mb-2"></i>
          Emergency
        </div>
      </div>

      <div class="col-12 col-sm-6">
        <div class="p-3 rounded text-dark fw-semibold d-flex flex-column align-items-center" style="background: #cce5ff;">
          <i class="bi bi-car-front-fill fs-2 mb-2"></i>
          Police
        </div>
      </div>

      <div class="col-12 col-sm-6">
        <div class="p-3 rounded text-warning fw-semibold d-flex flex-column align-items-center" style="background: #ffe4b8;">
          <i class="bi bi-truck fs-2 mb-2"></i>
          Fire
        </div>
      </div>

      <div class="col-12 col-sm-6">
        <div class="p-3 rounded text-info fw-semibold d-flex flex-column align-items-center" style="background: #a8d0e6;">
          <i class="bi bi-ambulance fs-2 mb-2"></i>
          Ambulance
        </div>
      </div>

      <div class="col-12 col-sm-6">
        <div class="p-3 rounded fw-semibold d-flex flex-column align-items-center" style="background: #e4d7f9; color: #6a2ea0;">
          <i class="bi bi-person-fill fs-2 mb-2"></i>
          Women Help
        </div>
      </div>

      <div class="col-12 col-sm-6">
        <div class="p-3 rounded fw-semibold d-flex flex-column align-items-center" style="background: #cee8d5; color: #2f593b;">
          <i class="bi bi-tree-fill fs-2 mb-2"></i>
          Forest Office
        </div>
      </div>

      <div class="col-12 col-sm-6">
        <div class="p-3 rounded fw-semibold d-flex flex-column align-items-center" style="background: #f4f1c3; color: #847c0e;">
          <i class="bi bi-building fs-2 mb-2"></i>
          Municipal Help
        </div>
      </div>

      <div class="col-12 col-sm-6">
        <div class="p-3 rounded fw-semibold d-flex flex-column align-items-center" style="background: #d5d9f5; color: #272e91;">
          <i class="bi bi-plug-fill fs-2 mb-2"></i>
          Power Dept.
        </div>
      </div>

    </div>
  </div>
</section>

<!-- Your Officer Section -->
<section class="p-4">
  <div class="bg-white rounded p-4 shadow-sm text-center">
    <h2 class="fw-bold fs-5 mb-4">Your Officer</h2>
    <div class="row g-3 justify-content-center">

      <!-- Officer Card 1 -->
      <div class="col-12 col-md-5">
        <div class="d-flex align-items-center gap-3 p-3 rounded shadow-sm bg-light">
          <div class="text-white bg-dark rounded-circle p-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
            <i class="bi bi-telephone-fill fs-4"></i>
          </div>
          <div class="text-start">
            <div class="fw-bold">Mr. Ravi Singh</div>
            <div class="text-muted">Zone Officer</div>
            <div class="text-primary fw-medium">+91 998877665</div>
          </div>
        </div>
      </div>

      <!-- Officer Card 2 -->
      <div class="col-12 col-md-5">
        <div class="d-flex align-items-center gap-3 p-3 rounded shadow-sm bg-light">
          <div class="text-white bg-dark rounded-circle p-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
            <i class="bi bi-telephone-fill fs-4"></i>
          </div>
          <div class="text-start">
            <div class="fw-bold">Mr. Ravi Singh</div>
            <div class="text-muted">Zone Officer</div>
            <div class="text-primary fw-medium">+91 998877665</div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
  <footer>
    Powered by <span>Redmelon Pvt Ltd.</span>
  </footer>

    </div>
