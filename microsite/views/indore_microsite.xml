<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="id_indore_microsite_template" name="UDAN Property Info">
    <t t-call="website.layout">
      <!-- External CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
      <style>
        .govt-services-section {
          background: none !important;
          padding: 0 !important;
          margin: 0 !important;
          border: none !important;
        }
        .govt-services-box {
          background: #fff;
          
          border-radius: 22px;
          box-shadow: 0 2px 16px 0 rgba(0,0,0,0.10);
          padding: 2rem 1rem 1.5rem 1rem;
          max-width: 700px;
          margin: 0 auto;
        }
        .govt-service-icon-box {
          width: 64px;
          height: 64px;
          border-radius: 16px;
          display: flex;
          align-items: center;
          justify-content: center;
          margin: 0 auto 0.5rem auto;
          background: rgba(255, 255, 255, 0.7);
          border: 2.5px solid;
          border-image: linear-gradient(135deg, #ff9800 0%, #e91e63 100%);
          border-image-slice: 1;
        }
        .govt-service-icon-box i {
          font-size: 2rem;
          color: #e65100;
        }
        .govt-service-label {
          font-weight: 600;
          font-size: 1.08rem;
          color: #222;
          margin-top: 0.5rem;
          text-align: center;
        }
        .govt-services-row {
          overflow-x: auto;
          flex-wrap: nowrap;
        }
        .header-gradient {
          background: linear-gradient(135deg, #7b223c 0%, #b85b2c 100%) !important;
        }
        .emergency-card {
          border: 2.5px solid #e0e0e0;   /* Light gray border for all */
          border-radius: 18px;
          color: #fff;
          font-weight: 600;
          font-size: 1.08rem;
          box-shadow: 0 2px 12px 0 rgba(0,0,0,0.08);
          display: flex;
          align-items: center;
          justify-content: center;
          min-height: 90px;
          transition: transform 0.12s, box-shadow 0.12s, border-color 0.12s;
          cursor: pointer;
          background-clip: padding-box;
        }
        .emergency-card:hover {
          transform: translateY(-4px) scale(1.03);
          box-shadow: 0 6px 24px 0 rgba(0,0,0,0.13);
          opacity: 0.95;
          border-color: #7b223c; /* Highlight border on hover */
        }
        .emergency-icon {
          font-size: 2rem;
          margin-bottom: 0.3rem;
          display: block;
        }
        .emergency-bg-red {
          background: #fdebed;
          color: #b71c1c; /* deep red for text/icon */
          border-color: #f8bbbc;
        }
        .emergency-bg-blue {
          background: #e3f2fd;
          color: #1565c0; /* deep blue for text/icon */
          border-color: #b3d6f7;
        }
        .emergency-bg-yellow {
          background: #fff7e0;
          color: #b26a00; /* deep gold for text/icon */
          border-color: #ffe9b3;
        }
        .emergency-bg-cyan {
          background: #e0f7fa;
          color: #00838f; /* teal for text/icon */
          border-color: #b3e6ea;
        }
        .emergency-bg-purple {
          background: #f3e5f5;
          color: #6a1b9a; /* purple for text/icon */
          border-color: #e1c6f3;
        }
        .emergency-bg-green {
          background: #e8f5e9;
          color: #2e7d32; /* green for text/icon */
          border-color: #bfe5c7;
        }
        .emergency-bg-gold {
          background: #fffde7;
          color: #bfa600; /* gold for text/icon */
          border-color: #fff7b3;
        }
        .emergency-bg-indigo {
          background: #e8eaf6;
          color: #283593; /* indigo for text/icon */
          border-color: #c6c8f3;
        }
        .emergency-label {
          font-size: 1.08rem;
          font-weight: 600;
          margin-top: 0.2rem;
          letter-spacing: 0.2px;
        }
        .container { max-width: 100% !important; }
        .main-section-card {
          background: #fff;
          border-radius: 24px;
          max-width: 1100px;
          margin-left: 5%;
          margin-right: 5%;
          margin-bottom: 2rem;
          box-shadow: 0 2px 16px 0 rgba(0,0,0,0.10);
          padding: 0.7rem 0.5rem;
        }
        @media (max-width: 767.98px) {
          .govt-services-section .card-body {
            padding: 1.2rem !important;
          }
          .govt-service-label {
            font-size: 1rem;
          }
          .main-section-card {
            margin-left: 2%;
            margin-right: 2%;
            padding: 1rem 0.5rem;
          }
          .d-flex.flex-nowrap {
            gap: 1rem !important;
          }
        }
        .govt-services-scroll {
          gap: 1.5rem;
          padding-bottom: 0.5rem;
          /* Optional: hide scrollbar for webkit browsers */
          scrollbar-width: thin;
          scrollbar-color: #ccc #fff;
        }
        .govt-services-scroll::-webkit-scrollbar {
          height: 8px;
          background: #fff;
        }
        .govt-services-scroll::-webkit-scrollbar-thumb {
          background: #eee;
          border-radius: 4px;
        }
        .service-box {
          background: #fff;
          border-radius: 18px;
          box-shadow: 0 2px 12px 0 rgba(0,0,0,0.08);
          width: 100%;
          padding: 1.5rem 1rem;
          margin-bottom: 0;
          display: flex;
          flex-direction: row;
          align-items: stretch;
          justify-content: space-between;
          gap: 1.5rem;
        }
        @media (max-width: 767.98px) {
          .service-box {
            flex-direction: column;
            gap: 1rem;
            padding: 1rem 0.5rem;
          }
        }
        .header-content-box {
          max-width: 700px;
          margin: 0 auto;
          padding-left: 2rem;
          padding-right: 2rem;
          border-radius: 18px;
          /* Optional: add a subtle shadow for a card effect */
          /* box-shadow: 0 2px 16px 0 rgba(0,0,0,0.10); */
        }
        @media (max-width: 767.98px) {
          .header-content-box {
            max-width: 100%;
            padding-left: 1rem;
            padding-right: 1rem;
          }
        }
        .center-section {
          max-width: 900px;
          margin: 0 auto 0.3rem auto;
          display: flex;
          flex-direction: column;
          align-items: center;
        }
        .main-section-card {
          width: 100%;
          padding: 0.7rem 0.5rem;
        }
        .card-body {
          padding: 1rem !important;
        }
        @media (max-width: 991.98px) {
          .center-section {
            max-width: 98vw;
            margin-left: 1vw;
            margin-right: 1vw;
          }
        }
        .o_footer, footer, .footer {
          display: none !important;
        }
        /* Officer Card Customization */
        .officer-card {
          border: 2.5px solid #bdbdbd; /* Subtle gray border */
          border-radius: 18px;
          background: #fff;
          color: #222 !important;
          box-shadow: 0 2px 12px 0 rgba(0,0,0,0.08);
          font-weight: 600;
          font-size: 1.08rem;
          display: flex;
          align-items: center;
          justify-content: center;
          min-height: 120px;
          transition: transform 0.12s, box-shadow 0.12s;
          cursor: pointer;
        }
        .officer-card:hover {
          transform: translateY(-4px) scale(1.03);
          box-shadow: 0 6px 24px 0 rgba(0,0,0,0.13);
          opacity: 0.97;
          border-color: #7b223c; /* Highlight border on hover */
        }
        .officer-card .officer-label {
          color: #222 !important;
          font-size: 1.08rem;
          font-weight: 700;
          margin-top: 0.2rem;
          letter-spacing: 0.2px;
        }
        .officer-card .officer-name,
        .officer-card .officer-phone {
          color: #333 !important;
          font-size: 0.95rem;
          font-weight: 500;
          opacity: 1;
          margin-top: 0.2rem;
        }
        .officer-card .officer-phone {
          text-decoration: none;
          display: block;
          margin-top: 0.1rem;
        }
        .govt-payment-row {
          display: flex;
          flex-direction: row;
          gap: 1.2rem;
          justify-content: center;
          align-items: stretch;
          flex-wrap: nowrap;
          overflow-x: auto;
          padding-bottom: 0.5rem;
          margin-left: 0;
          margin-right: 0;
        }
        .govt-payment-box {
          background: #fff;
          border-radius: 18px;
          box-shadow: 0 2px 12px 0 rgba(0,0,0,0.08);
          border: none;
          min-width: 120px;
          flex: 1 0 120px;
          max-width: 180px;
          padding: 1.2rem 0.5rem 1rem 0.5rem;
          margin-bottom: 0;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: flex-start;
        }
        .govt-payment-scroll::-webkit-scrollbar {
          height: 8px;
          background: #fff;
        }
        .govt-payment-scroll::-webkit-scrollbar-thumb {
          background: #eee;
          border-radius: 4px;
        }
        @media (max-width: 767.98px) {
          .govt-payment-row {
            gap: 1rem;
            padding-left: 0.5rem;
            padding-right: 0.5rem;
          }
          .govt-payment-box {
            min-width: 120px;
            max-width: 160px;
            flex: 0 0 70vw;
          }
        }
        .payment-services-row {
          width: 100%;
          gap: 2rem;
          margin: 0 auto;
          padding: 0;
          flex-wrap: nowrap;
          justify-content: center;
          align-items: flex-start;
        }
        .payment-service-box {
          flex: 0 1 140px;
          min-width: 100px;
          max-width: 160px;
          padding: 0.5rem 0.2rem 0.3rem 0.2rem;
          background: none;
          box-shadow: none;
          border-radius: 0;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: flex-start;
        }
        .icon-gradient-box {
          width: 54px;
          height: 54px;
          border-radius: 14px;
          display: flex;
          align-items: center;
          justify-content: center;
          background: linear-gradient(135deg, #ff9800 0%, #e91e63 100%);
          box-shadow: 0 2px 8px 0 rgba(0,0,0,0.10);
          border: 2.5px solid #fff;
        }
        .icon-gradient-box i {
          font-size: 2rem;
          color: #fff;
        }
        .govt-service-label {
          font-size: 1.08rem;
          margin-top: 0.1rem;
          color: #222;
          font-weight: 600;
        }
        @media (max-width: 767.98px) {
          .payment-services-row {
            gap: 0.5rem;
          }
          .payment-service-box {
            min-width: 80px;
            max-width: 110px;
            padding: 0.3rem 0.1rem 0.2rem 0.1rem;
          }
          .icon-gradient-box {
            width: 38px;
            height: 38px;
            border-radius: 8px;
          }
          .icon-gradient-box i {
            font-size: 1.2rem;
          }
          .govt-service-label {
            font-size: 0.92rem;
          }
        }
      </style>
      <div class="body-gradient-bg">
        <section class="id_indore_microsite_template">
          <!-- Header Section -->
          <header class="header-gradient text-white py-4">
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-12 text-center">
                  <h1 class="display-6 fw-bold mb-1" style="letter-spacing: 1px; text-shadow: 0 2px 8px rgba(0,0,0,0.08); padding-top: 1rem; padding-bottom: 1rem;">
                    Welcome to <span class="highlight-hindi">डिजिटल पता</span>
                  </h1>
                  <div class="h5 fw-light mb-0" style="letter-spacing: 1px;">INDORE MUNICIPAL CORPORATION</div>
                </div>
              </div>
            </div>
          </header>
      
          <!-- Property Details Section -->
          <section class="py-1">
            <div class="center-section">
              <div class="card p-4 position-relative border border-white rounded-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h2 class="fw-bold mb-3" style="font-size:1.3rem; letter-spacing:1px;">Property Details</h2>
                  <t t-if="property.uuid">
                    <t t-set="property_url" t-value="(property.company_id.website or request.httprequest.url_root).strip('/') + '/get/' + property.uuid"/>
                    <t t-set="maps_url" t-value="'https://www.google.com/maps/search/?api=1&amp;query=' + (property.survey_line_ids and property.survey_line_ids[0] and property.survey_line_ids[0].latitude and property.survey_line_ids[0].longitude and (property.survey_line_ids[0].latitude + ',' + property.survey_line_ids[0].longitude) or '')"/>
                    <a t-att-href="'https://wa.me/?text=' + property_url + '%0ACheck%20out%20this%20property%20on%20Bharat%20DDN!%0A%0ALocation:%20' + maps_url"
                       class="btn btn-success btn-sm d-flex align-items-center"
                       style="font-weight:600;"
                       target="_blank">
                      <i class="bi bi-whatsapp me-1"></i> Share
                    </a>
                  </t>
                </div>
                <div class="row g-3 align-items-center">
                  <div class="col-6">
                    <div class="text-secondary" style="font-size:1rem;">Unit No.</div>
                    <div class="fw-bold" style="font-size:1.1rem;">
                      <t t-if="property.unit_no"><t t-out="property.unit_no"/></t>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="text-secondary" style="font-size:1rem;">Digital Door Number</div>
                    <div class="fw-bold" style="font-size:1.1rem;">
                      <t t-if="property.upic_no"><t t-out="property.upic_no"/></t>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="text-secondary" style="font-size:1rem;">Zone</div>
                    <div class="fw-bold" style="font-size:1.1rem;">
                      <t t-if="property.zone_id and property.zone_id.name"><t t-out="property.zone_id.name"/></t>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="text-secondary" style="font-size:1rem;">Ward</div>
                    <div class="fw-bold" style="font-size:1.1rem;">
                      <t t-if="property.ward_id and property.ward_id.name"><t t-out="property.ward_id.name"/></t>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="text-secondary" style="font-size:1rem;">Colony</div>
                    <div class="fw-bold" style="font-size:1.1rem;">
                      <t t-if="property.colony_id and property.colony_id.name">
                        <t t-out="property.colony_id.name"/>
                      </t>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="text-secondary" style="font-size:1rem;">Property Id</div>
                    <div class="fw-bold" style="font-size:1.1rem;">
                      <t t-if="property.property_no">
                        <t t-out="property.property_no"/>
                      </t>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="text-secondary" style="font-size:1rem;">Address</div>
                    <div class="fw-bold text-uppercase" style="font-size:1.1rem;">
                      <t t-if="property.survey_line_ids and property.survey_line_ids[0]">
                        <t t-if="property.survey_line_ids[0].address_line_1">
                          <t t-out="property.survey_line_ids[0].address_line_1"/>,
                        </t>
                        <t t-if="property.survey_line_ids[0].address_line_2">
                          <t t-out="property.survey_line_ids[0].address_line_2"/>,
                        </t>
                      </t>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="text-secondary" style="font-size:1rem;">Latitude &amp; Longitude</div>
                    <div class="fw-bold" style="font-size:1.1rem;">
                      <t t-if="property.survey_line_ids and property.survey_line_ids[0]">
                        <t t-if="property.survey_line_ids[0].latitude and property.survey_line_ids[0].longitude">
                          <t t-out="property.survey_line_ids[0].latitude"/> &amp; <t t-out="property.survey_line_ids[0].longitude"/>
                        </t>
                      </t>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Government Payment Services -->
          <t t-foreach="services" t-as="srv">
            <section class="py-1">
              <h2 class="text-center fw-bold mb-3" style="font-size:1.3rem; letter-spacing:1px;">Government Payment Services</h2>
              <div class="d-flex justify-content-center align-items-stretch payment-services-row">
                <t t-foreach="srv.govt_line_ids" t-as="govt"> 
                    <div class="payment-service-box text-center">
                      <div class="icon-gradient-box mb-2 mx-auto">
                        <div class="govt-service-label">
                          <t t-raw="govt.text"/>
                        </div>
                      </div>
                      <div class="govt-service-label">
                        <t t-out="govt.name"/>
                      </div>
                    </div>
                  </t>
                </div>
                
            </section>
          

            <!-- Emergency Services -->
            <section class="py-1">
              <h2 class="text-center fw-bold mb-4" style="font-size:1.3rem; letter-spacing:1px;">Emergency Services</h2>
              <div class="center-section">
                <div class="card p-4 position-relative border border-white rounded-4">
                  <div class="card-body p-4">
                    <div class="row g-3">
                      <t t-foreach="srv.dial_line_ids" t-as="dial"> 
                        <div class="col-6 col-md-3">
                        <div t-att-class="'emergency-card emergency-bg-' + dial.bg_color + ' text-center'">
                            <div>
                              <t t-raw="dial.text"/>
                              <div class="emergency-label"><t t-raw="dial.name"/></div>
                            </div>
                          </div>
                        </div>
                      </t>
                     
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <!-- Your Officer Section -->
            <section class="py-1">
              <div class="center-section">
                <div class="card p-4 position-relative border border-white rounded-4">
                  <div class="card-body p-4">
                    <h2 class="text-center fw-bold mb-4" style="font-size:1.6rem;">Your Officers</h2>
                    <div class="row g-3">
                    
                      <!-- Zone Officer -->
                      <div class="col-6 col-md-3">
                        <div class="officer-card text-center">
                          <div>
                            <i class="bi bi-person-badge emergency-icon"></i>
                            <div class="officer-label">Zone Officer</div>
                            <div class="officer-name">Mr. Ravi Singh</div>
                            <a href="tel:+919988776655" class="officer-phone">+91 998877665</a>
                          </div>
                        </div>
                      </div>
                      <!-- Ward Officer -->
                      <div class="col-6 col-md-3">
                        <div class="officer-card text-center">
                          <div>
                            <i class="bi bi-person-vcard emergency-icon"></i>
                            <div class="officer-label">Ward Officer</div>
                            <div class="officer-name">Mr. Amit Kumar</div>
                            <a href="tel:+919988776655" class="officer-phone">+91 998877665</a>
                          </div>
                        </div>
                      </div>
                      <!-- Municipal Officer -->
                      <div class="col-6 col-md-3">
                        <div class="officer-card text-center">
                          <div>
                            <i class="bi bi-building emergency-icon"></i>
                            <div class="officer-label">Municipal Officer</div>
                            <div class="officer-name">Mrs. Priya Sharma</div>
                            <a href="tel:+919988776655" class="officer-phone">+91 998877665</a>
                          </div>
                        </div>
                      </div>
                      <!-- Property Officer -->
                      <div class="col-6 col-md-3">
                        <div class="officer-card text-center">
                          <div>
                            <i class="bi bi-house-gear emergency-icon"></i>
                            <div class="officer-label">Property Officer</div>
                            <div class="officer-name">Mr. Rajesh Patel</div>
                            <a href="tel:+919988776655" class="officer-phone">+91 998877665</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>

          </t>
        </section>
      </div>
    </t>
  </template>
</odoo>