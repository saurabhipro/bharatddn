<odoo>
    <!-- Action for Company Type -->
    <record id="action_company_type" model="ir.actions.act_window">
        <field name="name">Company Types</field>
        <field name="res_model">company.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage company types for your contacts.
            </p>
        </field>
    </record>

    <!-- Menu Item under Configuration > Address Book -->
    <menuitem id="menu_company_type"
              name="Company Types"
              parent="contacts.res_partner_menu_config"
              action="action_company_type"
              sequence="25"/>
</odoo>
