<?xml version='1.0' encoding='utf-8'?>
<odoo>  
    <template id="property_details_template" name="UDAN Property Info">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background-color: #1b2a56;
      color: white;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .highlight-yellow {
      color: #ffc107;
      font-weight: 600;
    }
    .cashback-banner {
      background: white;
      color: #053071;
      border-radius: 1rem;
      padding: 1rem;
      margin-bottom: 1.5rem;
    }
    .btn-pay {
      background: #ffc107;
      color: #053071;
      font-weight: 700;
      padding: 0.5rem 1.5rem;
      border-radius: 50px;
      border: none;
      width: 100%;
      max-width: 200px;
      white-space: nowrap;
      cursor: pointer;
    }
    .property-card {
      background: white;
      color: #000;
      border-radius: 1rem;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }
    .property-label {
      font-weight: 600;
      font-size: 0.9rem;
      opacity: 0.7;
      margin-bottom: 0.15rem;
    }
    .property-value {
      font-weight: 700;
      font-size: 1.1rem;
      margin-bottom: 1rem;
    }
    .property-images img {
      width: 100%;
      max-height: 90px;
      border-radius: 0.8rem;
      object-fit: cover;
      border: 2px solid #ccc;
      transition: border-color 0.3s ease;
      cursor: pointer;
    }
    .property-images img:hover {
      border-color: #ffc107;
    }
    .brand {
      text-align: right;
      font-size: 0.75rem;
      color: #f03e3e;
      font-weight: 600;
      user-select: none;
      margin-top: 0.5rem;
    }
    .section-title {
      font-weight: 700;
      font-size: 1.3rem;
      color: #000;
      margin-bottom: 1rem;
    }
    .service-btn, .emergency-btn {
      border-radius: 1rem;
      padding: 1rem;
      font-weight: 600;
      font-size: 1rem;
      color: #000;
      background-color: #f8f9fa;
      border: 2px solid transparent;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.4rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .service-btn i, .emergency-btn i {
      font-size: 1.8rem;
    }
    /* Service colors */
    .property-tax {
      border-color: #4a3dbf;
      color: #4a3dbf;
    }
    .water-bill {
      border-color: #3b5cc4;
      color: #3b5cc4;
    }
    .grievance {
      border-color: #e26923;
      color: #e26923;
    }
    .birth-certificate {
      border-color: #74b5e7;
      color: #74b5e7;
    }
    .marriage-certificate {
      border-color: #f15659;
      color: #f15659;
    }
    /* Emergency colors */
    .emergency-sos { background: #f8d7da; color: #a71c1c; }
    .emergency-police { background: #d1e7f9; color: #0d4d6c; }
    .emergency-fire { background: #ffe4b8; color: #a86c05; }
    .emergency-ambulance { background: #a8d0e6; color: #084a6c; }
    .emergency-women { background: #e4d7f9; color: #6a2ea0; }
    .emergency-forest { background: #cee8d5; color: #2f593b; }
    .emergency-municipal { background: #f4f1c3; color: #847c0e; }
    .emergency-power { background: #d5d9f5; color: #272e91; }
    .officer-card {
      background: white;
      border-radius: 1rem;
      padding: 1rem;
      margin-bottom: 1rem;
      color: #000;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .officer-icon {
      background: #1b2a56;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      color: #ffc107;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1.5rem;
    }
    .officer-name {
      font-weight: 700;
      margin-bottom: 0.25rem;
    }
    .officer-role {
      font-weight: 600;
      font-size: 0.9rem;
      opacity: 0.7;
    }
    .officer-phone {
      font-weight: 600;
      font-size: 0.9rem;
      color: #1b2a56;
    }
    .ambulance-icon-wrapper {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
      color: #084a6c;
      font-weight: 700;
      font-size: 1.25rem;
    }
    .ambulance-icon-wrapper i {
      font-size: 2rem;
    }
  </style>
  <div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
      <div>
        <h4 class="mb-1">Welcome to <span class="highlight-yellow">UDAN</span></h4>
        <div>Sangli Miraj and Kupwad City</div>
      </div>
      <img src="/mnt/data/fd072a77-2671-4bae-b4be-649855a89535.png" alt="UDAN City Logo" style="height: 60px; border-radius: 50%;" />
    </div>

    <!-- Cashback Banner -->
    <div class="cashback-banner d-flex flex-column flex-sm-row justify-content-between align-items-center gap-3">
      <div class="text-center text-sm-start">
        <div style="font-size: 0.75rem; font-weight: 600;">GET UP TO</div>
        <div style="font-size: 1.75rem; font-weight: 700; margin-bottom: 0.25rem;">
          â‚¹<span style="color:#053071;">100</span> Cashback
        </div>
        <div style="font-size: 0.85rem; font-weight: 600;">on Electricity Bill Payment</div>
        <small style="font-size: 0.6rem; opacity: 0.6;">T&amp;C Apply | Offer only for you</small>
      </div>
      <button class="btn-pay">Pay Now</button>
    </div>

    <!-- Property Card -->
    <div class="property-card shadow-sm">
      <div class="row g-3 align-items-center">
        <div class="col-12 col-md-8">
          <div class="row g-2">
            <div class="col-6 col-sm-4">
              <div class="property-label">Owner Name</div>
              <div class="property-value">Lucas Nelson</div>
            </div>
            <div class="col-6 col-sm-4">
              <div class="property-label">Property ID</div>
              <div class="property-value">0080</div>
            </div>
            <div class="col-6 col-sm-4">
              <div class="property-label">Digital Door Number</div>
              <div class="property-value">F7-06/D-0080</div>
            </div>
            <div class="col-6 col-sm-4">
              <div class="property-label">Latitude &amp; Longitude</div>
              <div class="property-value">Null &amp; Null</div>
            </div>
            <div class="col-6 col-sm-4">
              <div class="property-label">Block</div>
              <div class="property-value">06/D</div>
            </div>
            <div class="col-6 col-sm-4">
              <div class="property-label">Address</div>
              <div class="property-value">ZONE SEVEN BLOCK SIX</div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-4">
          <div class="property-images row g-2">
            <div class="col-6">
              <a href="https://example.com/property1" target="_blank" rel="noopener">
                <img src="/mnt/data/62a738c1-df2c-4c22-b6ff-e41ce65bc921.png" alt="Property 1" class="img-fluid" />
              </a>
            </div>
            <div class="col-6">
              <a href="https://example.com/property2" target="_blank" rel="noopener">
                <img src="/mnt/data/001d4969-026c-423d-a34a-23e980dabacc.png" alt="Property 2" class="img-fluid" />
              </a>
            </div>
          </div>
          <div class="brand mt-2">redmelon</div>
        </div>
      </div>
    </div>

    <!-- Ambulance Icon Standalone -->
    <div class="ambulance-icon-wrapper">
      <i class="bi bi-ambulance"></i>
      Ambulance Service
    </div>

    <!-- Services Section -->
    <section class="services-section">
      <div class="section-title">Services</div>
      <div class="row g-3">
        <div class="col-6 col-md-2">
          <button class="service-btn property-tax">
            <i class="bi bi-house-fill"></i>
            Property Tax
          </button>
        </div>
        <div class="col-6 col-md-2">
          <button class="service-btn water-bill">
            <i class="bi bi-droplet-fill"></i>
            Water Bill
          </button>
        </div>
        <div class="col-6 col-md-2">
          <button class="service-btn grievance">
            <i class="bi bi-question-circle-fill"></i>
            Grievance
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="service-btn birth-certificate">
            <i class="bi bi-key-fill"></i>
            Birth Certificate
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="service-btn marriage-certificate">
            <i class="bi bi-emoji-smile-fill"></i>
            Marriage Certificate
          </button>
        </div>
      </div>
    </section>

    <!-- Emergency Services -->
    <section class="emergency-section">
      <div class="section-title">Emergency Services</div>
      <div class="row g-3">
        <div class="col-6 col-md-3">
          <button class="emergency-btn emergency-sos">
            <i class="bi bi-exclamation-triangle-fill"></i>
            Emergency
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="emergency-btn emergency-police">
            <i class="bi bi-car-front-fill"></i>
            Police
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="emergency-btn emergency-fire">
            <i class="bi bi-truck"></i>
            Fire
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="emergency-btn emergency-ambulance">
            <i class="bi bi-ambulance"></i>
            Ambulance
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="emergency-btn emergency-women">
            <i class="bi bi-person-fill"></i>
            Women Help
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="emergency-btn emergency-forest">
            <i class="bi bi-tree-fill"></i>
            Forest Office
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="emergency-btn emergency-municipal">
            <i class="bi bi-building"></i>
            Municipal Help
          </button>
        </div>
        <div class="col-6 col-md-3">
          <button class="emergency-btn emergency-power">
            <i class="bi bi-plug-fill"></i>
            Power Dept.
          </button>
        </div>
      </div>
    </section>

    <!-- Your Officer Section -->
    <section class="officer-section">
      <div class="section-title">Your Officer</div>
      <div class="row">
        <div class="col-12 col-md-6">
          <div class="officer-card">
            <div class="officer-icon">
              <i class="bi bi-telephone-fill"></i>
            </div>
            <div>
              <div class="officer-name">Mr. Ravi Singh</div>
              <div class="officer-role">Zone Officer</div>
              <div class="officer-phone">+91 998877665</div>
            </div>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="officer-card">
            <div class="officer-icon">
              <i class="bi bi-telephone-fill"></i>
            </div>
            <div>
              <div class="officer-name">Mr. Ravi Singh</div>
              <div class="officer-role">Zone Officer</div>
              <div class="officer-phone">+91 998877665</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </template>
</odoo>
