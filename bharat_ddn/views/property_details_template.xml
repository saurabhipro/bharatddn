<?xml version='1.0' encoding='utf-8'?>
<odoo>  
    <template id="property_details_template" name="UDAN Property Info">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
        <style>
            body {
                font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
                background-color: #0A1628;
                color: #ffffff;
                line-height: 1.6;
            }

            .custom-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 20px;
            }

            /* Header Section */
            .header-section {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 20px 0;
                margin-bottom: 30px;
            }

            .header-title h1 {
                font-size: 2.5rem;
                font-weight: 600;
                margin-bottom: 5px;
            }

            .header-title span {
                color: #FFB800;
            }

            .header-title p {
                color: #B0B7C3;
                font-size: 1.2rem;
                margin: 0;
            }

            .header-logo img {
                width: 80px;
                height: 80px;
            }

            /* Cashback Banner */
            .cashback-banner {
                background-color: #F5F7FF;
                border-radius: 20px;
                padding: 30px;
                margin-bottom: 30px;
                position: relative;
                overflow: hidden;
                color: #0A1628;
            }

            .cashback-content {
                max-width: 60%;
            }

            .cashback-label {
                color: #4A5567;
                font-size: 0.9rem;
                margin-bottom: 10px;
            }

            .cashback-amount {
                font-size: 2rem;
                font-weight: 600;
                margin-bottom: 5px;
            }

            .cashback-description {
                color: #4A5567;
                margin-bottom: 20px;
            }

            .pay-now-btn {
                background-color: #FFB800;
                color: #0A1628;
                padding: 10px 25px;
                border-radius: 25px;
                text-decoration: none;
                font-weight: 600;
                display: inline-block;
                border: none;
            }

            .pay-now-btn:hover {
                background-color: #FFA500;
                color: #0A1628;
            }

            .cashback-image {
                position: absolute;
                right: 30px;
                top: 50%;
                transform: translateY(-50%);
                width: 200px;
            }

            /* Property Card */
            .property-card {
                background-color: #1A2537;
                border-radius: 20px;
                padding: 30px;
                margin-bottom: 30px;
            }

            .property-info {
                margin-bottom: 20px;
            }

            .info-label {
                color: #B0B7C3;
                font-size: 0.9rem;
                margin-bottom: 5px;
            }

            .info-value {
                color: #ffffff;
                font-size: 1.2rem;
                font-weight: 500;
                margin-bottom: 20px;
            }

            .coordinates-btn {
                background-color: #2D3A4F;
                border: none;
                color: #ffffff;
                padding: 8px 15px;
                border-radius: 15px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
            }

            .coordinates-btn i {
                color: #4A90E2;
            }

            /* Property Images */
            .property-images {
                display: flex;
                flex-direction: column;
                gap: 15px;
                height: 100%;
            }

            .property-image-container {
                position: relative;
                width: 100%;
                height: 160px;
                border-radius: 12px;
                overflow: hidden;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .property-image {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

            .property-image:hover {
                transform: scale(1.05);
            }

            .image-overlay {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                padding: 8px 12px;
                background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
                color: white;
                font-size: 0.85rem;
            }

            @media (max-width: 768px) {
                .header-section {
                    flex-direction: column;
                    text-align: center;
                }

                .header-logo {
                    margin-top: 20px;
                }

                .cashback-content {
                    max-width: 100%;
                }

                .cashback-image {
                    display: none;
                }

                .property-images {
                    flex-direction: row;
                    margin-top: 20px;
                }
                
                .property-image-container {
                    width: calc(50% - 8px);
                    height: 140px;
                }
            }
        </style>

        <div class="custom-container" style="max-width: 420px; margin: 0 auto; padding: 0; background: linear-gradient(180deg, #fff 80%, #f5f7ff 100%); border-radius: 24px; box-shadow: 0 4px 24px rgba(25, 118, 210, 0.10); overflow: hidden;">
            <!-- Header Section -->
            <div style="background: #0A1628; color: #fff; padding: 24px 20px 12px 20px; border-top-left-radius: 24px; border-top-right-radius: 24px;">
                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <div>
                        <div style="font-size: 1.3rem; font-weight: 600; letter-spacing: 0.5px;">Welcome to <span style="color: #FFB800;">DDN</span></div>
                        <div style="font-size: 1rem; color: #B0B7C3;">Sangli Miraj and Kupwad City</div>
                    </div>
                    <!-- <img src="/ddn/static/src/img/logo.png" alt="UDAN Logo" style="width: 54px; height: 54px; border-radius: 50%; background: #fff; object-fit: contain;"/> -->
                </div>
            </div>

            <!-- Cashback Banner -->
            <div style="background: #f5f7ff; border-radius: 18px; margin: 18px 16px 0 16px; padding: 18px 16px 12px 16px; box-shadow: 0 2px 8px rgba(25, 118, 210, 0.07); display: flex; align-items: center; gap: 16px;">
                <div style="flex: 1;">
                    <div style="color: #4A5567; font-size: 0.9rem; margin-bottom: 4px;">GET UP TO</div>
                    <div style="font-size: 1.3rem; font-weight: 700; color: #0A1628; margin-bottom: 2px;">₹100 Cashback</div>
                    <div style="color: #4A5567; font-size: 0.95rem; margin-bottom: 8px;">on Electricity Bill Payment</div>
                    <a href="#" style="background: #FFB800; color: #0A1628; padding: 7px 18px; border-radius: 18px; text-decoration: none; font-weight: 600; font-size: 1rem; display: inline-block;">Pay Now</a>
                    <div style="font-size: 0.8rem; margin-top: 6px; color: #888;">*T&amp;C Apply</div>
                </div>
                <!-- <img src="/ddn/static/src/img/cashback-illustration.png" alt="Cashback Offer" style="width: 80px; height: 80px; object-fit: contain;"/> -->
            </div>

            <!-- Property Card -->
            <t t-foreach="property" t-as="pr">
                <div style="background: #fff; border-radius: 18px; margin: 18px 16px 0 16px; padding: 18px 16px 12px 16px; box-shadow: 0 2px 8px rgba(25, 118, 210, 0.07);">
                    <div style="display: flex; gap: 12px; align-items: flex-start;">
                        <div style="flex: 1;">
                            <div style="font-size: 1.1rem; font-weight: 600; margin-bottom: 8px;">Owner Name</div>
                            <div style="font-size: 1.05rem; font-weight: 500; margin-bottom: 10px; color: #222;"><t t-esc="pr.owner_name"/></div>

                        
                            <div style="font-size: 0.98rem; color: #888; margin-bottom: 2px;">Digital Door Number</div>
                            <div style="font-size: 1.1rem; font-weight: 600; margin-bottom: 10px; color: #0A1628;"><t t-esc="pr.upic_no"/></div>
                        
                            <div style="font-size: 0.98rem; color: #888; margin-bottom: 2px;">Latitude &amp; Longitude</div>
                            <div style="font-size: 1.05rem; font-weight: 500; margin-bottom: 10px; color: #0A1628; display: flex; align-items: center; gap: 8px;">
                                <i class="fas fa-location-dot" style="color: #4A90E2;"></i>
                                <t t-if="pr.survey_line_ids and len(pr.survey_line_ids) > 0">
                                    <t t-set="lat" t-value="pr.survey_line_ids[0].latitude"/>
                                    <t t-set="lng" t-value="pr.survey_line_ids[0].longitude"/>
                                    <t t-esc="lat"/>°N, <t t-esc="lng"/>°E
                                    <a t-att-href="'https://wa.me/?text=Check%20out%20this%20property%20location:%20https://maps.google.com/?q=' + str(lat) + ',' + str(lng)"
                                       target="_blank"
                                       style="margin-left: 6px; display: inline-flex; align-items: center;"
                                       title="Share location on WhatsApp">
                                        <i class="fab fa-whatsapp" style="color: #25D366; font-size: 1.3em;"></i>
                                    </a>
                                </t>
                            </div>

                            <div style="font-size: 0.98rem; color: #888; margin-bottom: 2px;">Block</div>
                            <div style="font-size: 1.05rem; font-weight: 500; margin-bottom: 10px; color: #0A1628;"><t t-esc="pr.zone_no.name"/></div>

                            <div style="font-size: 0.98rem; color: #888; margin-bottom: 2px;">Address</div>
                            <div style="font-size: 1.05rem; font-weight: 500; margin-bottom: 10px; color: #0A1628; text-transform: uppercase;"><t t-esc="pr.property_description"/></div>
                        </div>
                        <div style="display: flex; flex-direction: column; gap: 10px; align-items: flex-end;">
                            <t t-if="pr.survey_line_ids and len(pr.survey_line_ids) > 0">
                                <img t-if="pr.survey_line_ids[0].property_image"
                                     t-att-src="image_data_uri(pr.survey_line_ids[0].property_image)"
                                     style="width: 110px; height: 80px; border-radius: 12px; object-fit: cover; margin-bottom: 8px; border: 2px solid #FFB800; box-shadow: 0 2px 8px rgba(25, 118, 210, 0.10);"
                                     alt="Property Front View"/>
                                <img t-if="pr.survey_line_ids[0].property_image1"
                                     t-att-src="image_data_uri(pr.survey_line_ids[0].property_image1)"
                                     style="width: 110px; height: 80px; border-radius: 12px; object-fit: cover; border: 2px solid #FFB800; box-shadow: 0 2px 8px rgba(25, 118, 210, 0.10);"
                                     alt="Additional View"/>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </div>

        <!-- Add Bootstrap JS and Popper.js -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    </template>
</odoo>
